    "graphql": "^14.5.8",
    "luxon": "^1.21.2",
    "per-env": "^1.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "dotenv": "^8.2.0",
    "eslint": "^6.7.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-sort-requires": "^2.1.0",
    "global-agent": "^2.1.7",
    "husky": "^3.1.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "standard-version": "^7.0.1"
