{
  "name": "@expect.tv/server",
  "version": "0.1.0",
  "private": true,
  "description": "The server component of Expect TV",
  "homepage": "https://github.com/avidenie/expect.tv-server#readme",
  "bugs": {
    "url": "https://github.com/avidenie/expect.tv-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/avidenie/expect.tv-server.git"
  },
  "author": "Adrian Videnie <avidenie@gmail.com>",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon --exec 'node -r ./dotenv -r global-agent/bootstrap' --watch src src/index.js",
    "release": "standard-version",
    "start": "node src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/prompt"
    }
  },
  "dependencies": {
    "apollo-datasource-rest": "^0.6.4",
    "apollo-server": "^2.9.3",
    "graphql": "^14.5.4",
    "luxon": "^1.20.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt": "^8.2.0",
    "commitizen": "^4.0.3",
    "dotenv": "^8.1.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-sort-requires": "^2.1.0",
    "global-agent": "^2.1.7",
    "husky": "^3.0.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "standard-version": "^7.0.0"
  },
  "engines": {
    "node": ">=8.10.0"
  }
}
